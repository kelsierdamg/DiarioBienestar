<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioBienestar.EstadisticasPage"
             Title="EstadisticasPage">

    <VerticalStackLayout Padding="20">
        <Frame 
            Padding="20" 
            CornerRadius="20"
            BackgroundColor="#EEE">

            <VerticalStackLayout>
                <Label
                    x:Name="lblPromedioActividad"
                    FontSize="18"
                    TextColor="Black" />

                <Label
                    x:Name="lblPromedioEnergia"
                    FontSize="18"
                    Margin="0,10,0,0" />

                <ProgressBar
                    x:Name="overallProgress"
                    Margin="0,20,0,0"
                    Progress="0" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>